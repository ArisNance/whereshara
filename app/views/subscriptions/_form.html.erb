
<%= form_for(@subscription) do |f| %>
  <% if @subscription.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

      <ul>
      <% @subscription.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="form-group">
  <%= f.label :your_subscription_title %><br>
  <%= f.text_field :title, placeholder: 'Lets try to keep it short ', class: "form-control border-input" %>
</div>
<br>
<br>
<div class="form-group">
<%= f.label :Select_the_company %><br>
        <p id="tags_p">Don't see the Company? Please Let us know and We'll add it.  Golikealocal@gmail.com</p>
    <%= f.select(:company, options_for_select([['Hulu'], ['Nexflix'], ['Itunes'], ['Spotify'], ['Sound Cloud'], ['Xbox'], ['Microsoft'], ['TNT'], ['HBO'], ['Amazon Prime']  ]), class: "city-select") %>
    </div>
    <br>
  <br>
  <div class="form-group">
   <!--f.datetime_select :start_time, class: "form-control border-input" %>-->
    <%= time_select :subscription, :time, {:class => "form-control" } %>
  </div>
  <br>
  
  <div class="form-group">
     <!--f.datetime_select :end_time, class: "form-control border-input" %>-->
    <%= date_select :subscription, :time, {:class => "form-control" } %>
  </div>

  <br>
  <br>
  <div class="form-group">
  <%= f.label :phone_number, :class => 'control-label col-lg-2' %>
  <div class="col-lg-10">
    <%= f.text_field :phone_number, :class => 'form-control' %>
  </div>

  </div>
  
  <div class="form-group">
  <%= f.label :The_link_to_cancel_your_account %><br>
  <%= f.text_field :url, placeholder: 'www.hulu.co/4356/yourprofile', class: "form-control border-input" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>

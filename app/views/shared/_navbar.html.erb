<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
        <%= link_to image_tag("w-logo.png", class: "navbar"), root_path %>
    </div>

    <div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
  <div id="">
    <% if current_person %>
    Welcome <strong><%= current_person.name %></strong>!
    <% else %>
    Toggle Menu
  <% end %>
  </div>
    <span class="caret"></span>
  </button>
<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
  <% if current_person %>
  <li><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
  <strong><li><%= link_to "View Profile", persons_profile_url(current_person) %></li></strong>
  <% else %>
  <li id="sign_in"><%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %></li>
  <% end %>
